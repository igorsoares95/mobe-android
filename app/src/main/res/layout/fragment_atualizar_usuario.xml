<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="64dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/activity_bg"
    tools:context="com.example.guilherme.mobe.fragments.AtualizarUsuarioFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/bg_edittext"
        android:textColor="#222222"
        android:id="@+id/nome_atualizaUsuario"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/nome_atualizaUsuario"
        android:layout_alignLeft="@+id/nome_atualizaUsuario"
        android:layout_alignStart="@+id/nome_atualizaUsuario" />

    <TextView
        android:id="@+id/email_atualizaUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:background="@drawable/bg_edittext"
        android:editable="false"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#222222" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone: "
        android:id="@+id/textView6"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/email_atualizaUsuario"
        android:layout_alignLeft="@+id/email_atualizaUsuario"
        android:layout_alignStart="@+id/email_atualizaUsuario" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/bg_edittext"
        android:textColor="#222222"
        android:id="@+id/telefone_atualizaUsuario"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar Dados"
        android:id="@+id/btnSalvar_atualizaUsuario"
        android:padding="15dp"
        android:background="@drawable/bg_botoes"
        android:textColor="#ffffff"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/telefone_atualizaUsuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAlterarSenha_atualizaUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/bg_botoes"
        android:padding="15dp"
        android:text="Alterar Senha"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_desativar__atualizar_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/bg_botoes"
        android:padding="15dp"
        android:text="Desativar UsuÃ¡rio"
        android:textColor="#ffffff" />
</RelativeLayout>