<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="16dp"
    tools:context="com.example.guilherme.mobe.activity.EsqueciSenhaActivity"
    android:background="@drawable/activity_bg">

    <EditText
        android:id="@+id/email_esqueci_senha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#222222"
        android:textColorHint="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="59dp"
        />

    <Button
        android:id="@+id/enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_botoes"
        android:text="Receber nova senha"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/email_esqueci_senha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="A nova senha será enviada para o endereço de email acima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/lbltexto"
        android:layout_below="@+id/enviar"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        />

</RelativeLayout>
