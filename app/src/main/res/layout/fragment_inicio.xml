<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container_fragment_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.InicioFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".fragments.InicioFragment">


        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


        </LinearLayout>

        <TextView
            android:id="@+id/lbl_saudacao_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/lbl_nome_usuario_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/lbl_descricao_veiculos_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_meus_veiculos_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meus veículos" />

        <Button
            android:id="@+id/btn_registrar_veiculo_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registre seu veículo" />

        <TextView
            android:id="@+id/lbl_qtd_manutencoes_atrasadas_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ver_manutencoes_atrasadas_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver manutenções atrasadas" />

        <TextView
            android:id="@+id/lbl_qtd_manutencoes_proximas_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_ver_manutencoes_proximas_fragment_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver manutenções próximas" />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
